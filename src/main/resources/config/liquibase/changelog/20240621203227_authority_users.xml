<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="usuarios-1" author="sena">
        <createTable tableName="usuarios">
            <column name="id" type="VARCHAR(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="login" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="cargos" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="usuario-2" author="sena">
        <renameColumn tableName="usuarios" oldColumnName="login" newColumnName="nome" columnDataType="VARCHAR(255)"/>
        <renameColumn tableName="usuarios" oldColumnName="password" newColumnName="senha" columnDataType="VARCHAR(255)"/>
    </changeSet>

    <changeSet id="usuario-3" author="sena">
        <addColumn tableName="usuarios">
            <column name="revenda_id" type="bigint">
            </column>
        </addColumn>

        <addForeignKeyConstraint baseTableName="usuarios"
                                 baseColumnNames="revenda_id"
                                 constraintName="fk_usuarios_revenda"
                                 referencedTableName="revenda"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>
